#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " ",]

user_input = gets.strip
puts "Welcome to Tic Tac Toe!"
display_board(board)

index = input_to_index(user_input)
turn(board)
valid_move?(board, index)
position_taken?(board, index)
move(board, index, "X")
